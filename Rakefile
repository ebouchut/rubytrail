task :default => :fried_egg

task :fried_egg => [:heat_pan, :pour_oil, :break_eggs, :bake, :serve] do
  puts "Here is a fried egg."
end

task :heat_pan do
  puts "Heating the pan"
end

task :pour_oil do
  puts "Pourring oil"
end

task :break_eggs do
  puts "Breaking eggs"
end

task :bake do
  puts "Baking"
end

task :serve do
  puts "Serving"
end
